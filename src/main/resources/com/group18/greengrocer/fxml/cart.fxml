<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group18.greengrocer.controller.CartController" stylesheets="@../css/style.css">
   <children>
      <BorderPane layoutX="200.0" layoutY="100.0" prefHeight="540.0" prefWidth="960.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
             <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="15.0" styleClass="app-header" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleBack" text="Back" styleClass="button-secondary" />
                  <Label text="Your Shopping Cart" styleClass="heading-2" style="-fx-text-fill: white;" />
               </children>
            </HBox>
         </top>
         <center>
            <VBox spacing="15.0" BorderPane.alignment="CENTER" style="-fx-background-color: #F4F6F8;">
               <padding>
                  <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
               </padding>
               <children>
                  <!-- CART TABLE -->
                  <TableView fx:id="cartTable" prefHeight="350.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="productNameColumn" prefWidth="300.0" text="Product Name" />
                      <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="Quantity" />
                      <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Unit Price" />
                      <TableColumn fx:id="totalColumn" prefWidth="100.0" text="Total" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  
                  <!-- DISCOUNTS & ACTIONS SECTION -->
                  <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="card" style="-fx-padding: 15;">
                      <children>
                          <VBox spacing="5">
                              <Label text="Loyalty Program" style="-fx-font-weight: bold; -fx-text-fill: #546E7A;"/>
                              <Label fx:id="loyaltyLabel" text="Status: Checking..." textFill="#2E7D32" style="-fx-font-weight: bold;"/>
                          </VBox>
                          
                          <Region HBox.hgrow="ALWAYS"/>
                          
                          <Label text="Have a Coupon?" styleClass="label"/>
                          <TextField fx:id="couponField" promptText="Enter Code" prefWidth="150" />
                          <Button text="Apply" onAction="#handleApplyCoupon" styleClass="button-secondary"/>
                      </children>
                  </HBox>

                  <!-- TOTAL & CHECKOUT -->
                  <HBox alignment="CENTER_RIGHT" spacing="20.0">
                     <children>
                        <Button fx:id="removeButton" mnemonicParsing="false" onAction="#handleRemoveItem" text="Remove Selected" styleClass="button-danger" />
                        <Region HBox.hgrow="ALWAYS" />
                        <VBox alignment="CENTER_RIGHT">
                             <Label text="Total Amount" style="-fx-font-size: 12px; -fx-text-fill: #90A4AE;"/>
                             <Label fx:id="totalPriceLabel" text="0.00 TL" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
         <bottom>
            <HBox alignment="CENTER_RIGHT" prefHeight="80.0" spacing="20.0" styleClass="footer" BorderPane.alignment="CENTER">
               <children>
                  <VBox alignment="CENTER_LEFT">
                      <Label text="Requested Delivery:" styleClass="label" style="-fx-font-weight: bold;"/>
                      <Label text="(Select date &amp; time)" style="-fx-font-size: 11px; -fx-text-fill: #90A4AE;"/>
                  </VBox>
                  <DatePicker fx:id="deliveryDatePicker" promptText="Select Date" />
                   <HBox spacing="5" alignment="CENTER_LEFT">
                       <ComboBox fx:id="deliveryHourCombo" prefWidth="70.0" promptText="HH" />
                       <Label text=":" />
                       <ComboBox fx:id="deliveryMinuteCombo" prefWidth="70.0" promptText="MM" />
                   </HBox>
                  <Button fx:id="checkoutButton" mnemonicParsing="false" onAction="#handleCheckout" prefHeight="45.0" prefWidth="160.0" text="Secure Checkout" styleClass="button-accent">
                  </Button>
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
