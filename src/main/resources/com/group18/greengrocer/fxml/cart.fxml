<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group18.greengrocer.controller.CartController">
   <children>
      <BorderPane layoutX="200.0" layoutY="100.0" prefHeight="540.0" prefWidth="960.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="10.0" style="-fx-background-color: #2E7D32;" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleBack" text="Back" />
                  <Label text="Shopping Cart" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <VBox spacing="10.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <TableView fx:id="cartTable" prefHeight="350.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="productNameColumn" prefWidth="300.0" text="Product Name" />
                      <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="Quantity" />
                        <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Unit Price" />
                        <TableColumn fx:id="totalColumn" prefWidth="100.0" text="Total" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <!-- DISCOUNTS SECTION -->
                  <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-background-color: #fce4ec; -fx-padding: 10;">
                      <children>
                          <Label fx:id="loyaltyLabel" text="Loyalty Status: ..." textFill="#c2185b">
                              <font>
                                  <Font size="14.0"/>
                              </font>
                          </Label>
                          <Region HBox.hgrow="ALWAYS"/>
                          <Label text="Coupon:"/>
                          <TextField fx:id="couponField" promptText="Enter Code"/>
                          <Button text="Apply" onAction="#handleApplyCoupon"/>
                      </children>
                  </HBox>

                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Button fx:id="removeButton" mnemonicParsing="false" onAction="#handleRemoveItem" style="-fx-background-color: #c62828;" text="Remove Selected" textFill="WHITE" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="totalPriceLabel" text="Total: 0.00 TL">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
         <bottom>
            <HBox alignment="CENTER_RIGHT" prefHeight="70.0" spacing="15.0" style="-fx-background-color: #eee;" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
               </padding>
               <children>
                  <Label text="Delivery Date:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="deliveryDatePicker" promptText="Select Date" />
                  <Button fx:id="checkoutButton" mnemonicParsing="false" onAction="#handleCheckout" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #2E7D32;" text="Checkout" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
