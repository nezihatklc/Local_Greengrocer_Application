<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="540.0" prefWidth="960.0"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.group18.greengrocer.controller.CarrierController"
            stylesheets="@../css/styles.css"
            styleClass="root">

    <!-- ===== HEADER ===== -->
    <top>
        <HBox alignment="CENTER_LEFT"
              spacing="10"
              styleClass="header">
            <children>
                <Label text="Group18 GreenGrocer - Carrier Dashboard"
                       styleClass="header-label"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="usernameLabel"
                       styleClass="header-label"/>
                <Button fx:id="logoutButton"
                        text="Logout"/>
            </children>
        </HBox>
    </top>

    <!-- ===== CENTER ===== -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">

            <!-- ===== AVAILABLE ORDERS ===== -->
            <Tab text="Available Orders">
                <content>
                    <VBox spacing="10" padding="10">
                        <Label text="Orders Waiting for Delivery">
                            <font>
                                <Font size="16"/>
                            </font>
                        </Label>

                        <TableView fx:id="availableOrdersTable"
                                   VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colOrderId" text="Order ID" prefWidth="50"/>
                                <TableColumn fx:id="colCustomerName" text="Customer" prefWidth="100"/>
                                <TableColumn fx:id="colAddress" text="Address" prefWidth="180"/>
                                <TableColumn fx:id="colAvProducts" text="Products" prefWidth="250"/>
                                <TableColumn fx:id="colAvDate" text="Order Date" prefWidth="120"/>
                                <TableColumn fx:id="colTotalPrice" text="Total" prefWidth="80"/>
                            </columns>
                        </TableView>

                        <HBox alignment="CENTER_RIGHT">
                            <Button fx:id="acceptOrderButton"
                                    text="Take Selected Order"
                                    onAction="#handleAcceptOrder"/>
                        </HBox>
                    </VBox>
                </content>
            </Tab>

            <!-- ===== MY CURRENT ORDERS ===== -->
            <Tab text="My Current Orders">
                <content>
                    <VBox spacing="10" padding="10">
                        <Label text="Selected / Active Deliveries">
                            <font>
                                <Font name="System Bold" size="16"/>
                            </font>
                        </Label>

                        <Label text="Select an order from the list and mark it as delivered." textFill="gray"/>

                        <TableView fx:id="currentOrdersTable"
                                   VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colCurOrderId" text="Order ID" prefWidth="60"/>
                                <TableColumn fx:id="colCurCustomer" text="Customer" prefWidth="100"/>
                                <TableColumn fx:id="colCurAddress" text="Address" prefWidth="200"/>
                                <TableColumn fx:id="colCurProducts" text="Products" prefWidth="220"/>
                                <TableColumn fx:id="colCurTotal" text="Total" prefWidth="80"/>
                                <TableColumn fx:id="colCurStatus" text="Status" prefWidth="100"/>
                            </columns>
                        </TableView>

                        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-border-color: #ddd; -fx-padding: 10; -fx-background-color: #f9f9f9;">
                            <Label text="Delivery Action:" style="-fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="Date:"/>
                            <DatePicker fx:id="deliveryDatePicker"/>
                            <Button fx:id="completeDeliveryButton"
                                    text="Deliver Selected"
                                    onAction="#handleCompleteDelivery"/>
                        </HBox>
                    </VBox>
                </content>
            </Tab>

            <!-- ===== HISTORY ===== -->
            <Tab text="History">
                <content>
                    <VBox spacing="10" padding="10">
                        <Label text="Completed Deliveries">
                            <font>
                                <Font size="16"/>
                            </font>
                        </Label>

                        <TableView fx:id="completedOrdersTable"
                                   VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colHistOrderId" text="Order ID" prefWidth="80"/>
                                <TableColumn fx:id="colHistDate" text="Delivery Date" prefWidth="150"/>
                                <TableColumn fx:id="colHistStatus" text="Status" prefWidth="120"/>
                                <TableColumn fx:id="colHistRating" text="Rating" prefWidth="100"/>
                            </columns>
                        </TableView>
                    </VBox>
                </content>
            </Tab>

        </TabPane>
    </center>

    <!-- ===== FOOTER ===== -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" padding="5">
            <Label text="CMPE343 - Group 18"
                   styleClass="footer-text"/>
        </HBox>
    </bottom>

</BorderPane>

