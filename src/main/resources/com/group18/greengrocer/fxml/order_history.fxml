<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.group18.greengrocer.controller.OrderHistoryController"
            stylesheets="@../css/style.css"
            prefWidth="700"
            prefHeight="450">

    <!-- =====================
         HEADER
         ===================== -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="app-header">
             <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Order History" styleClass="heading-2" style="-fx-text-fill: white; -fx-font-size: 20px;"/>
        </HBox>
    </top>

    <!-- =====================
         CENTER : ORDER LIST
         ===================== -->
    <center>
        <TableView fx:id="ordersTable">

            <columns>
                <TableColumn fx:id="idColumn" text="Order ID" prefWidth="80"/>
                <TableColumn fx:id="dateColumn" text="Order Date" prefWidth="180"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="150"/>
                <TableColumn fx:id="totalColumn" text="Total (TL)" prefWidth="120"/>
            </columns>

        </TableView>
    </center>

    <!-- =====================
         BOTTOM : ACTIONS
         ===================== -->
    <bottom>
        <HBox spacing="10"
              alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="View Details"
                    onAction="#handleViewDetails"
                    styleClass="button-secondary"/>

            <Button text="Cancel Order"
                    onAction="#handleCancelOrder"
                    styleClass="button-danger"/>

            <Button text="Download Invoice"
                    onAction="#handleDownloadInvoice"
                    styleClass="button-secondary"/>

            <Button text="Rate Products"
                    onAction="#handleRateProducts"
                    styleClass="button-accent"/>

            <Button text="Close"
                    onAction="#handleClose"
                    styleClass="button-secondary"/>

        </HBox>
    </bottom>

</BorderPane>
