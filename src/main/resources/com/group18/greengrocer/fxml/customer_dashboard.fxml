<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="540.0" prefWidth="960.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.group18.greengrocer.controller.CustomerController">

    <!-- ================= HEADER ================= -->
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="10"
                  style="-fx-background-color: #2E7D32;">
                <children>
                    <Label text="Group18 GreenGrocer" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="24"/>
                        </font>
                    </Label>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Label fx:id="usernameLabel" textFill="WHITE"/>
                    <Button text="My Orders" onAction="#handleMyOrders"/>
                    <Button fx:id="cartButton" text="Cart (0)" onAction="#handleViewCart"/>
                    <Button text="Logout" onAction="#handleLogout"
                            style="-fx-background-color:#c62828;"
                            textFill="WHITE"/>
                </children>
                <padding>
                    <Insets top="10" bottom="10" left="20" right="20"/>
                </padding>
            </HBox>

            <!-- ================= SEARCH BAR ================= -->
            <HBox spacing="10" alignment="CENTER_LEFT"
                  style="-fx-background-color:#eeeeee;">
                <children>
                    <Label text="Search:"/>
                    <TextField fx:id="searchField"
                               promptText="Search products..."
                               onKeyReleased="#handleSearch"
                               prefWidth="300"/>
                </children>
                <padding>
                    <Insets top="8" bottom="8" left="20" right="20"/>
                </padding>
            </HBox>
        </VBox>
    </top>

    <!-- ================= CENTER ================= -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>

                <Tab text="Fruits">
                    <content>
                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                            <content>
                                <TilePane fx:id="fruitPane"
                                          prefColumns="4"
                                          hgap="15"
                                          vgap="15">
                                    <padding>
                                        <Insets top="20" bottom="20"
                                                left="20" right="20"/>
                                    </padding>
                                </TilePane>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>

                <Tab text="Vegetables">
                    <content>
                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                            <content>
                                <TilePane fx:id="vegetablePane"
                                          prefColumns="4"
                                          hgap="15"
                                          vgap="15">
                                    <padding>
                                        <Insets top="20" bottom="20"
                                                left="20" right="20"/>
                                    </padding>
                                </TilePane>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>

            </tabs>
        </TabPane>
    </center>

</BorderPane>
