<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.group18.greengrocer.controller.RegisterController"
           prefHeight="540.0" prefWidth="960.0" 
           stylesheets="@../css/style.css">
    
    <children>
        <VBox alignment="CENTER" maxWidth="520.0" spacing="18.0" styleClass="login-card">
            <children>
                <Label text="Register New Customer" styleClass="heading-2" style="-fx-font-size: 26px;"/>
                
                <Label text="Please fill in your details to create an account." styleClass="subtitle"/>
                
                <VBox spacing="6.0" alignment="CENTER_LEFT">
                    <Label text="Username" styleClass="label" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="usernameField" promptText="Choose a unique username"/>
                </VBox>
                
                <VBox spacing="6.0" alignment="CENTER_LEFT">
                    <Label text="Password" styleClass="label" style="-fx-font-weight: bold;"/>
                    <PasswordField fx:id="passwordField" promptText="Min 8 chars, 1 Upper, 1 Lower, 1 Digit"/>
                </VBox>

                <VBox spacing="6.0" alignment="CENTER_LEFT">
                    <Label text="Phone Number" styleClass="label" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="phoneField" promptText="e.g., 5551234567"/>
                </VBox>
                
                <VBox spacing="6.0" alignment="CENTER_LEFT">
                    <Label text="Address" styleClass="label" style="-fx-font-weight: bold;"/>
                    <TextArea fx:id="addressArea" promptText="Enter your full delivery address" prefRowCount="3" wrapText="true"/>
                </VBox>
                
                <Button text="Register" onAction="#handleRegister" defaultButton="true" 
                        maxWidth="Infinity" styleClass="button-primary">
                    <VBox.margin>
                        <Insets top="12.0" />
                    </VBox.margin>
                </Button>
                
                <Hyperlink text="Back to Login" onAction="#handleBack" 
                           styleClass="hyperlink" style="-fx-font-size: 13px;"/>
            </children>
        </VBox>
    </children>
</StackPane>
