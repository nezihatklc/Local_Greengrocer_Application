<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.group18.greengrocer.controller.LoginController"
           prefHeight="400.0" prefWidth="600.0">
    <children>
        <javafx.scene.layout.VBox alignment="CENTER" spacing="15.0" maxWidth="300.0">
            <children>
                <javafx.scene.control.Label text="Greengrocer Login" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                
                <javafx.scene.control.TextField fx:id="usernameField" promptText="Username"/>
                
                <javafx.scene.control.PasswordField fx:id="passwordField" promptText="Password"/>
                
                <javafx.scene.control.Button fx:id="loginButton" text="Login" onAction="#handleLogin" defaultButton="true" maxWidth="Infinity"/>
            </children>
        </javafx.scene.layout.VBox>
    </children>
</StackPane>
