<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.group18.greengrocer.controller.LoginController"
           prefHeight="540.0" prefWidth="960.0" 
           stylesheets="@../css/style.css">
    
    <children>
        <VBox alignment="CENTER" maxWidth="420.0" spacing="24.0" styleClass="login-card">
            <children>
                <Label text="Group18 GreenGrocer" styleClass="heading-1"/>
                
                <Label text="Welcome back! Please login." styleClass="subtitle">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>
                
                <VBox spacing="8.0" alignment="CENTER_LEFT">
                    <Label text="Username" styleClass="label" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="usernameField" promptText="Enter your username"/>
                </VBox>
                
                <VBox spacing="8.0" alignment="CENTER_LEFT">
                    <Label text="Password" styleClass="label" style="-fx-font-weight: bold;"/>
                    <PasswordField fx:id="passwordField" promptText="Enter your password"/>
                </VBox>
                
                <Button fx:id="loginButton" text="Login" onAction="#handleLogin" defaultButton="true" 
                        maxWidth="Infinity" styleClass="button-accent" />
                
                <VBox alignment="CENTER" spacing="5.0">
                    <Label text="Don't have an account?" styleClass="subtitle"/>
                    <Hyperlink text="Register as Customer" onAction="#handleRegister" 
                               styleClass="hyperlink" style="-fx-font-size: 14px;"/>
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>
